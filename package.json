{
  "name": "rescript-ic10-compiler",
  "description": "ReScript to IC10 compiler for Stationeers",
  "version": "0.1.1",
  "bin": {
    "ric10": "./bin/ric10.js"
  },
  "files": [
    "bin/",
    "scripts/*.js",
    "src/compiler/*.js",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "res:clean": "./node_modules/.bin/rescript clean",
    "res:build": "./node_modules/.bin/rescript",
    "res:dev": "./node_modules/.bin/rescript -w",
    "compile": "node scripts/compile.res.js",
    "test": "jest"
  },
  "dependencies": {
    "@rescript/core": "^1.6.1",
    "rescript": "^11.1.4"
  },
  "devDependencies": {
    "@rescript/language-server": "^1.66.0",
    "@types/node": "^18.0.0",
    "jest": "^30.2.0"
  }
}
