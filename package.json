{
  "name": "rescript-ic10-compiler",
  "displayName": "ReScript to IC10 Compiler",
  "description": "Compile ReScript code to IC10 assembly language for Stationeers",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:rescript-ic10.compile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rescript-ic10.compile",
        "title": "Compile ReScript to IC10"
      }
    ]
  },
  "scripts": {
    "res:build": "rescript",
    "res:dev": "rescript -w",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev": "npm run watch"
  },
  "dependencies": {
    "@rescript/core": "^1.6.1",
    "rescript": "^11.1.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "gentype": "^4.5.0",
    "typescript": "^5.0.0"
  }
}